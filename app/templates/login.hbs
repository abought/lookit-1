
<div class="lookit-row lookit-page-title">
    <div class="container">
        <h2> Login </h2>
    </div>
</div>

<div class="lookit-row login-row">
    <div class="container">
        <div class="row">
            <div class="login-item col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                {{#if session.isAuthenticated}}
                    <p>You are logged in.</p>
                    <button class="btn btn-primary btn-lg" {{action 'invalidateSession'}}>Logout</button>
                {{else}}
                    {{jam-auth login=(action 'authenticate')}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
