<div class="container">
    <br><br><br>
    <h2>My Account</h2>

    <!--Still some issues with adding bootstrap styling to the tab component-->
    {{#ivy-tabs}}
          {{#ivy-tab-list}}
<!--Ivy tabs don't seem to be picking up the styling for their bootstrap classes, even though these classes are rendered in the HTML-->
            {{#ivy-tab}}Account Information{{/ivy-tab}}
            {{#ivy-tab}}Children Information{{/ivy-tab}}
          {{/ivy-tab-list}}
    
          {{#ivy-tab-panel}}
            <p>Account information tab.</p>
          {{/ivy-tab-panel}}
    
          {{#ivy-tab-panel}}
    
            <div>
            {{#bs-accordion}}
                {{#each model.profiles as |profile|}}
                {{#bs-accordion-item title=profile.firstName}}
                    
                    {{#if isEditing}}
                        
                        <div>
                            {{#bs-form}}
                                {{#bs-form-group}}
                                    <div>
                                        <label>First Name</label>
                                        {{bs-input type="text" value=editFirstName}}
                                    </div>
                                    <div>
                                        <label>Last Name</label>
                                        {{bs-input type="text" value=editLastName}}
                                    </div>
                                    <div>
                                        <label>Birthday</label>
                                        {{bs-input type="text" value=editBirthday}}
                                    </div>
                                    <br>
                                    <button {{action 'editProfile' profile}}>Submit</button>
                                    <button {{action 'edit'}}>Cancel</button>
                                {{/bs-form-group}}
                            {{/bs-form}}
                        </div>
                
                    {{else}}
                
                    <div>
                        <div>
                            <p>Name: {{profile.firstName}} {{profile.lastName}}</p>
                        </div>
                        <div>
                            <p>Birthday: {{profile.birthday}}</p>
                        </div>
                            
                        <button {{action 'edit'}}>Edit information</button>
                        <button {{action 'deleteProfile' profile}}>Delete this profile</button>
                    </div>
                
                    {{/if}}
                
                {{/bs-accordion-item}}
                {{/each}}
                
                {{#bs-accordion-item title="Add a new participant"}}
                <div>
                    
                    {{#bs-form}}
                        {{#bs-form-group}}
                            <div>
                                <label>First Name</label>
                                {{bs-input type="text" value=newFirstName}}
                            </div>
                            <div>
                                <label>Last Name</label>
                                {{bs-input type="text" value=newLastName}}
                            </div>
                            <div>
                                <label>Birthday</label>
                                {{bs-input type="text" value=newBirthday}}
                            </div>
                            <br>
                            <button {{action 'createProfile'}}>Create Profile</button>
                        {{/bs-form-group}}
                    {{/bs-form}}
                    
    
                </div>
                {{/bs-accordion-item}}
            {{/bs-accordion}}
            </div>
    
          {{/ivy-tab-panel}}
    
    {{/ivy-tabs}}
    
</div>