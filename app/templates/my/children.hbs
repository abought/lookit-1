<div class="row">
<div class="col-md=12">
  <button class="btn btn-default pull-right" onclick={{action 'toggleAddingNew'}}>Add a child</button>
  <br>
  <br>
  {{#bs-collapse collapsed=notAddingNew}}
    {{edit-profile profile=profile account=model genderOptions=genderOptions ageAtBirthOptions=ageAtBirthOptions onAdd=(action 'profileAdded')}}
  {{/bs-collapse}}
  {{#each model.activeProfiles as |child|}}
    {{edit-profile profile=child account=model genderOptions=genderOptions ageAtBirthOptions=ageAtBirthOptions}}
  {{/each}}
</div>
</div>