<form class="clearfix" submit={{action "createAccount"}}>
<div>
  <label>Username</label>
    {{input value=username class="form-control" type="text"}}
    <label>Email Address</label>
    {{input value=email class="form-control" type="text"}}
  <label>Password</label>
    {{input value=password class="form-control" type="password"}}
  <br>
    <div class="pull-right">
        <button class="btn btn-info" {{action "createAccount"}} >Create new account</button>
    </div>
</div>
</form>