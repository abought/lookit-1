<div class="lookit-row lookit-page-title">
  <div class="container">
    <h2> Current Studies </h2>
  </div>
</div>
<div class="lookit-row studies-row">
  <div class="container">
    <p class="study-detail-caption">Here are some studies that we're currently running:</p>
    <!--<p>Filter by age: [This will be added when some experiments actually have eligibility criteria]</p>-->
    <div class="row">
      {{#each model.experiments as |experiment|}}
      <div class="col-md-4">
        {{#link-to 'studies.detail' experiment.id classNames="thumbnail study-list-panel" tagName="div"}}
          <div class="study-list-thumbnail-wrapper">
            {{#if experiment.thumbnail.raw}}
              <img class="study-list-thumbnail" src="{{experiment.thumbnail.raw}}" />
            {{else}}
              <div class="study-list-placeholder">
                <i class="fa fa-picture-o "></i>
              </div>
            {{/if}}
          </div>
          <div class="caption">
            <h3>{{experiment.title}}</h3>
            <p>{{experiment.description}}</p>
            <div class="fadeout"></div>
          </div>
          <div class="full">
            {{link-to 'See details' 'studies.detail' experiment.id}}
        </div>
      {{/link-to}}
      </div>
      {{/each}}
    </div>
  </div>
</div>
